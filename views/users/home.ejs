                <div class="dot2"></div>
            </div>
        </div>
    </div>
    <!-- preloader area end -->


    <script>
        function Wishlist(Product) {
          $.ajax({
            url: "/addWishlist",
            data: {
              ProductId: Product,
            },
            method: "post",
            success: (response) => {
              if (response.Product_Exist) {
                Swal.fire({
                  icon: "success",
                  title: "Already Added",
                  text: "This item has been Already added to wishlist"
                });
              }
              Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Item Added to Wishlist",
                showConfirmButton: false,
                timer: 1500,
              });
            },
          });
        }
      </script>


  

