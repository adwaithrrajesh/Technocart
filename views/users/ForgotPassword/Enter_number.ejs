    <!-- BREADCRUMB AREA START -->

<div class="container d-flex flex-column" >
    <div class="row align-items-center justify-content-center
        min-vh-80 g-0">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="mb-4">
              <h5>Forgot Password?</h5>
              <p class="mb-2">Enter your registered Phone Number to reset the password
              </p>
            </div>

            <form id="register-form" role="form" action="/otp_verification" class="form" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Phone</label>
                <input id="email" name="PhoneNumber" maxlength="10" placeholder="Enter number" class="form-control" required  type="number">
              </div>
              <div class="mb-3 d-grid">
                <button class="theme-btn-1 btn btn-block" type="submit">Send Otp</button>
              </div>
              <span>Don't have an account? <a href="/register">sign in</a></span>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>


