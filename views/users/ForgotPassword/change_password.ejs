<%- include('../layouts/layout')-%>
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image "  data-bs-bg="img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Change Password</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="/login"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Login</a></li>
                            <li>Change Password</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- BREADCRUMB AREA START -->
<div class="container d-flex flex-column" >
    <div class="row align-items-center justify-content-center
        min-vh-80 g-0">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="mb-4">
              <h5>Enter New Password</h5>
              <p class="mb-2">You can change your password from here</p>
            </div>
            <form id="register-form" role="form" action="/change_password" class="form" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="Email" placeholder="Enter Email" class="form-control" required  type="email">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Enter New Password</label>
                <input id="password"  placeholder="New Password" class="form-control" required  type="password">
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Conform New Password</label>
                <input id="confirm_password" name="Password" placeholder="Confirm Password" class="form-control" required  type="password">
              </div>

              <div class="mb-3 d-grid">
                <button class="theme-btn-1 btn btn-block" type="submit">Change Password</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>


  <style>
    ::-webkit-inner-spin-button, 
    ::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}
  </style>


<script>
    var password = document.getElementById("password")
  , confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>