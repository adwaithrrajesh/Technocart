 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
 <div class="form-gap"></div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Forgot Password?</h2>
                  <p>You can reset your password here.</p>
                  <div class="panel-body">
    
                    <form id="register-form" role="form" action="/change_password" class="form" method="post">
    
                        <div class="form-group">
                        <div class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                          <input id="email" name="Email" placeholder="Enter Email" class="form-control" required  type="email">
                        </div>
                        <br><br> 
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input id="password"   placeholder="Enter New Password" class="form-control" required  type="password">
                          </div>
                          <br>
                          <br>
                          <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input id="confirm_password" name="Password" placeholder="Confirm Password" class="form-control" required  type="password">
                          </div>
                         </div>
                         <br><br>
                         <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                         </div>
                    </form> 
                  </div>
                </div>
              </div>
            </div>
          </div>
	</div>
</div>

<style>
    .form-gap {
    padding-top: 70px;
}
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
</style>


<script>
    var password = document.getElementById("password")
  , confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

password.onchange = validatePassword;
confirm_password.onkeyup = validatePassword;
</script>